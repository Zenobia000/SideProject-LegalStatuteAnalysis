# 國考法律題型分析系統 - 環境變數範例
# 複製此文件為 .env 並設定實際值

# 應用程式設定
APP_NAME="國考法律題型分析系統"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT="development"

# API 設定
API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/api/v1"

# 安全設定
SECRET_KEY="your-secret-key-here-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM="HS256"

# 資料庫設定
# PostgreSQL (推薦用於開發和生產)
DATABASE_URL="postgresql://admin:admin@localhost:5432/legal_analysis_db"
# SQLite 備援 (僅限開發環境)
# DATABASE_URL="sqlite:///./legal_analysis.db"
DATABASE_ECHO=false

# Redis 設定
REDIS_URL="redis://localhost:6379/0"

# OpenAI API 設定
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=4000

# 檔案存儲設定
UPLOAD_DIR="data/uploads"
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=".pdf"

# OCR 設定
OCR_ENGINE="paddleocr"  # paddleocr, tesseract
OCR_LANGUAGE="ch_tra"  # Traditional Chinese

# 日誌設定
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE="logs/app.log"

# 開發工具設定
RELOAD=true
WORKERS=1